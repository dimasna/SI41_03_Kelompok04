<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailProfileUserCoin">

    <androidx.cardview.widget.CardView
        android:id="@+id/header_d_taxes_rate"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingStart="16dp">

            <ImageView
                android:id="@+id/headerBackIcon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/backspace" />

            <TextView
                android:id="@+id/headerTaxesRateText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingStart="16dp"
                android:text="Detail Profile User's Coin"
                android:textAlignment="textStart"
                android:textColor="#070101"
                android:textSize="20dp"
                tools:ignore="RtlCompat" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/subheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12sp"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="12sp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardElevation="2sp"
        app:cardMaxElevation="2sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_d_taxes_rate">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12sp">


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="12sp"
                    app:cardCornerRadius="25dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/pp_user"
                        android:layout_width="50dp"
                        android:layout_height="52dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ava_background"
                        tools:ignore="ContentDescription" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nama_user"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="#535151"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="Nama User :)" />

                    <TextView
                        android:id="@+id/joined_date_user"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="#6F6A6A"
                        tools:text="Since 12/12/12" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/title_total_user_coin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Coins"
                android:textColor="#9E9696"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/nominal_total_user_coin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                android:text="600"
                android:textColor="#8871F3"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/title_topup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:text="Total Top-Up"
                android:textColor="#9E9696"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/nominal_topup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1200"
                android:textColor="#69CB5E"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/title_withdrawal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24sp"
                android:text="Total Withdrawal"
                android:textColor="#9E9696"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/nominal_withdrawal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#FF3737"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/title_received"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24sp"
                android:text="Total Received"
                android:textColor="#9E9696"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/nominal_received"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#69CB5E"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/title_transferred"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24sp"
                android:text="Total transferred"
                android:textColor="#9E9696"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/nominal_transferred"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="600"
                android:textColor="#FF3737"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>